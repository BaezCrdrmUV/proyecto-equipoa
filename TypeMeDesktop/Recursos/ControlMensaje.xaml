<UserControl x:Class="TypeMeDesktop.Recursos.ControlMensaje"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TypeMeDesktop.Recursos"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="150" d:DesignWidth="350" Height="auto" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="autorDeMensaje" FontSize="15" Margin="10,0,0,0" Grid.Row="0" FontWeight="Bold" ></TextBlock>
        <Image x:Name="imagen" Height="auto" Grid.Row="1" Margin="15,10,15,10"></Image>
        <TextBlock x:Name="contenidoDeMensaje" FontSize="15" Margin="15,5,15,10" TextWrapping="Wrap" Grid.Row="2">

        </TextBlock>
    </Grid>
</UserControl>
